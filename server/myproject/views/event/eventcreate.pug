extends ../layout

block content
  .page-header
    h3 Create an Event

  form.form-horizontal(action='/event', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label.col-sm-3.control-label(for='name') Name 
      .col-sm-7
        input.form-control(type='name', name='name', id='name', value=event)
    .form-group
      label.col-sm-3.control-label(for='purpose') Purpose
      .col-sm-7
        input.form-control(type='text', name='purpose', id='purpose', value=event)
    .form-group
      label.col-sm-3.control-label Category
      .col-sm-6
        label.radio.col-sm-3
          input(type='radio', name='category', value='V', data-toggle='radio')
          span V
        label.radio.col-sm-3
          input(type='radio',  name='category', value='E', data-toggle='radio')
          span E
        label.radio.col-sm-3
          input(type='radio', name='category', value='C', data-toggle='radio')
          span C
        label.radio.col-sm-3
          input(type='radio', name='category', value='A', data-toggle='radio')
          span A
        label.radio.col-sm-3
          input(type='radio', name='category', value='L', data-toggle='radio')
          span L
        label.radio.col-sm-3
          input(type='radio', name='category', value='O', data-toggle='radio')
          span O
    .form-group
      label.col-sm-3.control-label(for='ptvalue') Point value
      .col-sm-3
        select(name='ptvalue', id="ptvalue")
          option(value='1') 1
          option(value='2') 2
          option(value='3') 3
          option(value='4') 4
          option(value='5') 5
          option(value='★') ★

    .form-group
      label.col-sm-3.control-label(for='expDate') Point Experiation Date
      .col-sm-7
        input.form-control(type='text', name='expDate', id='expDate', value=user.profile.website placeholder="MM/DD/YYYY")
    .form-group
      label.col-sm-3.control-label Required to Work
      .col-sm-4
       input.form-control(type='checkbox' name="ReqtoW",style="width:12%")
    .form-group
      .col-sm-offset-3.col-sm-4
        button.btn.btn.btn-primary(type='reset')
          i.fa.fa-pencil
          | Cancel
        button.btn.btn.btn-primary(type='submit')
          i.fa.fa-pencil
          | Create